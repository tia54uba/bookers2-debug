<div class='container'>
  <div class='row'>
    <div class="col-12 px-5 px-sm-5 mx-auto ">

<h2>Follow Users</h2>
<% if @users.exists? %>
<table class="mx-auto table">
  <tr>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
    <td><%= user.name %></td>
    <td>フォロー数<%= user.following_user.count %></td>
    <td>フォロワー数<%= user.follower_user.count %></td>
    <td><%= link_to "Show",user_path(user.id) %></td>
  </tr>
  <% end %>
</table>

<% else %>
<p>ユーザーはいません</p>
<% end %>
</div>
</div>
</div>