<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user_followings_path(user.id) do %>
    <%= user.following_user.count %>
    <% end %></th>
  </tr>
  <tr>
  <th>followers</th>
  <th><%= link_to user_followers_path(user.id) do %>
    <%= user.follower_user.count %>
    <% end %></th>
  </tr>
</table>

<div class='row'>
  <% if current_user != user %>
  <% if current_user.following?(user) %>
  <%= link_to "フォロー外す", user_relationships_path(user.id),method: :delete, class: 'btn btn-success' %>
  <% else %>
  <%= link_to "フォローする",user_relationships_path(user.id),method: :post, class: 'btn btn-success'%>
  <% end %>
  <% else %>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  <% end %>
</div>